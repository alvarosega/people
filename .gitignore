# Crear/sobrescribir .gitignore
cat > .gitignore << 'EOF'
# Laravel
/node_modules
/public/hot
/public/storage
/storage/*.key
/vendor
.env
.env.production
.env.staging
.env.backup
.phpunit.result.cache
Homestead.json
Homestead.yaml
npm-debug.log
yarn-error.log
/.fleet
/.idea
/.vscode

# Firebase
/storage/app/firebase/*.json
!/storage/app/firebase/.gitkeep

# Logs
*.log
logs/

# OS
.DS_Store
Thumbs.db

# Testing
/coverage

# Build
/public/build

# Backup
*.backup
*.sql

# Hostinger
hostinger-check.php
EOF